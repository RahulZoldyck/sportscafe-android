<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.sportscafe.in.sportscafe.Articles.ArticleContentActivity"
    tools:showIn="@layout/activity_article_content">
    <ImageView
        android:id="@+id/article_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:src="@drawable/sportscafe"
        android:transitionName="shared_articleimg_transition"
        />
    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="8dp"
        android:paddingBottom="3dp"
        android:text="@string/title_activity_article_content"
        android:textColor="@color/colorPureBlack"/>
    <TextView
        android:id="@+id/article_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/article_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_sportscafe_editor"
        android:textColor="@color/colorPureBlack"
        android:padding="5dp"/>
    <ListView
        android:id="@+id/article_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#333"
        android:clipToPadding="false"/>
</LinearLayout>
