<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/listTeamImage1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0"/>
    <TextView
        android:id="@+id/listTeamName1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="100"/>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/listMatchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/listDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0">
                    <TextView
                        android:id="@+id/thText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/th"/>
                    <TextView
                        android:id="@+id/listMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>
        <TextView
            android:id="@+id/listTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView android:id="@+id/listTeamName2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="100"/>
    <ImageView
        android:id="@+id/listTeamImage2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0"/>

</LinearLayout>