<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="4dp"
              android:clickable="true">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPureWhite">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sportscafe"
                    android:layout_weight="2"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/overlay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            app:layout_anchor="@id/imageView"
            app:layout_anchorGravity="bottom|right|end"
            android:background="@drawable/feature_text_bg"
            android:alpha="120">
            <TextView
                android:id="@+id/title"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="@string/title_default"
                android:textColor="@color/colorPureWhite"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="16sp"
                android:textColor="@color/colorPureWhite"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/sport"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="italic"
                    android:padding="5dp"
                    android:textSize="12sp"
                    />
                <!--
                    <ImageView
                        android:id="@+id/share_fb"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/share_fb"
                        android:padding="3dp"/>
                    <ImageView
                        android:id="@+id/share_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/share_twitter"
                        android:padding="3dp"/>
                    <ImageView
                        android:id="@+id/share_google"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/share_google"
                        android:padding="3dp"/>-->
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>